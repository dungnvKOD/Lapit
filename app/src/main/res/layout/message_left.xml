<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
            android:paddingTop="4dp"
            android:id="@+id/imgMyAvatarLeft"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/layoutItemMessageLeft"
            android:src="@drawable/mau"/>


    <RelativeLayout
            android:id="@+id/layoutItemMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            android:layout_toEndOf="@id/imgMyAvatarLeft"
            android:background="@drawable/message_left">


        <TextView
                android:id="@+id/txtItemMessageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/imgItemImageLeft"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_below="@id/txtItemMessageLeft"
                android:layout_marginTop="4dp"
                android:src="@drawable/mau"/>

    </RelativeLayout>


    <TextView
            android:id="@+id/txtTimeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutItemMessageLeft"
            android:layout_alignEnd="@id/layoutItemMessageLeft"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>
</RelativeLayout>